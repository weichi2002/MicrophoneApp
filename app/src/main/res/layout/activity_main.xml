<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/record_history_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#AD8DE6"
        android:dividerHeight="1dp"
        android:listSelector="#ACD8AC"
        app:layout_constraintBottom_toTopOf="@id/gray_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        />


    <View
        android:id="@+id/gray_view"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#322626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/record_history_lv"
        app:layout_constraintVertical_bias="1.0" />


    <View
        android:id="@+id/dark_view"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/record_history_lv"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/record_btn"
        android:layout_width="84dp"
        android:layout_height="87dp"
        android:src="@drawable/baseline_mic_24"
        android:background="@drawable/mic_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />


</androidx.constraintlayout.widget.ConstraintLayout>